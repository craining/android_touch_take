<?xml version="1.0" encoding="UTF-8"?>
	<!-- 首页Listview的footview布局 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/loading" android:orientation="horizontal"
	android:gravity="center_vertical|center_horizontal"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	style="@style/exchange_listItem_but" android:background="@drawable/winad_sliding_btn_listitem_grey">
	<LinearLayout android:gravity="center"
		android:layout_width="fill_parent" android:layout_height="55dip">
		<TextView android:id="@+id/foottext" android:textSize="16.0dip"
			android:textStyle="bold" android:textColor="#000000"
			android:paddingLeft="10dip" android:layout_width="wrap_content"
			android:singleLine="true" android:ellipsize="none"
			android:layout_height="wrap_content" android:text="更多" />
		<ProgressBar android:id="@+id/myprogressbar"
			android:layout_width="31dip" android:layout_height="32dip"
			android:gravity="center_vertical|center_horizontal" style="@style/DDProgressStyle" />
	</LinearLayout>

</LinearLayout>
